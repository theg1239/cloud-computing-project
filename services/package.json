    "db:studio": "drizzle-kit studio --config=drizzle.config.ts"
  },
  "dependencies": {
    "@hono/graphql-server": "^0.7.0",
    "@hono/node-server": "^1.19.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.5",
    "graphql": "^16.11.0",
    "graphql-yoga": "^5.16.0",
    "hono": "^4.9.9",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
