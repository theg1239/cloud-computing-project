{
  "name": "hono",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/index.js",
    "seed": "tsx src/seed.ts",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
